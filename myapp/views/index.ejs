<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="../public/stylesheets/app.css">
	<link rel="stylesheet" href="../public/stylesheets/bootstrap-grid.min.css">
	<link rel="icon" href="/images/icon.png" class="icon-circular" type="image/png">

	<title> Mercado Libro Argentina</title>
			<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<link rel="stylesheet" href="/stylesheets/app.css">
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	
</head>
<body>
	
	<%- include('./partials/header') %>
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
      <% for( let i = 0; i < listado.length; i++ ) { %>   
        <div class="col-12 col-sm-6 col-lg-3">
          <section class="product-box">
            <a href="product/id/<%= listado[i].id %>"> 
              <figure class="product-box_image">
                <img src="images/products/<%=listado[i].titulo%>.png">
              </figure>
              <article class="product-box_data">
                <h2><%= listado[i].titulo %></h2>
                <p><%= listado[i].genero %></p>
                <p><%= listado[i].autor %></p>
                <p><%= listado[i].annio %></p>
              </article>
            </a>
          </section>
        </div>
      <% } %>
		</div>
	</div>


	<!-- footer -->
	 	<%- include('./partials/footer.ejs') %>
	<!-- /footer -->
</body>	
</html>
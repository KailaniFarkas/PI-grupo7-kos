<!-- Header -->
<header class="main-header">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-5 col-md-2">
				<a href="/" class="main-header_home-link">
					<img src="/images/logo-mercado-libro.png">
				</a>
			</div>

			<div class="col-7 col-md-6">
				<form action="/search" method="GET" class="search-form">
					<input type="text" name="search" placeholder="Buscar productos, marcas y m치s" class="search-form_input">
					<button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
